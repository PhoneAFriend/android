<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="seniordesign.phoneafriend">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".PhoneAFriend"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".authentication.SignIn"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.SignUp"
            android:screenOrientation="portrait" />
        <activity android:name=".posting.NewPostActivity" />
        <activity android:name=".posting.PostListActivity" />
        <activity android:name=".main_screen" />
        <activity android:name=".posting.ViewPostActivity" />
        <activity android:name=".updateSettings.updateEmail" />
        <activity android:name=".updateSettings.updatePassword" />
        <activity android:name=".userSearch.searchUsers" />
        <activity android:name=".messaging.NewMessageActivity" />
        <activity android:name=".messaging.ViewMessage" />
        <activity android:name=".posting.viewPostImage" />
        <activity android:name=".posting.currentUserPostsList" />
        <activity android:name=".posting.ViewCurrentUserPost" />
        <activity android:name=".session.SessionActivity"></activity>
    </application>

</manifest>