<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="seniordesign.phoneafriend.posting.PostListActivity"
    android:weightSum="1">

    <ListView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="250dp"
        android:id="@+id/postList_postList"></ListView>

    <Button
        android:text="New Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postList_newPostButton"
        android:layout_marginBottom="66dp"
        android:layout_above="@+id/postList_postList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_alignBaseline="@+id/postList_newPostButton"
        android:layout_alignBottom="@+id/postList_newPostButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:text="Question Posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postList_titleView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="42dp"/>


</RelativeLayout>
