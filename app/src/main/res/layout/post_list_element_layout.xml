<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postListElement_questionTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:id="@+id/postListElement_authorText"
        android:layout_below="@+id/postListElement_questionTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:id="@+id/postListElement_dateText"
        android:layout_alignBaseline="@+id/postListElement_authorText"
        android:layout_alignBottom="@+id/postListElement_authorText"
        android:layout_toRightOf="@+id/postListElement_authorText"
        android:layout_toEndOf="@+id/postListElement_authorText" />

</RelativeLayout>