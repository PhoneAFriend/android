<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="seniordesign.phoneafriend.updateSettings.updatePassword">

    <TextView
        android:text="@string/cur_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:id="@+id/current_password_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/current_password_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/current_password"
        android:hint="@string/cur_pass"/>

    <TextView
        android:text="@string/new_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/new_password_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/new_password_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/new_pass_text"
        android:hint="@string/new_pass"/>

    <TextView
        android:text="@string/confirm_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_pass_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/confirm_password_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/confirm_password_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/confirm_pass_text"
        android:hint="@string/confirm_pass"/>

    <Button
        android:text="@string/submit_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/current_password_label"
        android:layout_alignEnd="@+id/current_password_label"
        android:layout_marginBottom="34dp"
        android:id="@+id/submit_pass" />


</RelativeLayout>
